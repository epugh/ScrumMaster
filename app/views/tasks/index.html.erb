<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Started</th>
    <th>Found</th>
    <th>Done</th>
    <th>Low estimate</th>
    <th>Hight estimate</th>
    <th>Initial estimate</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.started %></td>
    <td><%=h task.found %></td>
    <td><%=h task.done %></td>
    <td><%=h task.low_estimate %></td>
    <td><%=h task.high_estimate %></td>
    <td><%=h task.initial_estimate %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>