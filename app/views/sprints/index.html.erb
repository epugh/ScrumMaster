<h1>Listing sprints</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Theme</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Number of days</th>
  </tr>

<% @sprints.each do |sprint| %>
  <tr>
    <td><%=h sprint.title %></td>
    <td><%=h sprint.theme %></td>
    <td><%=h sprint.start_date %></td>
    <td><%=h sprint.end_date %></td>
    <td><%=h sprint.number_of_days %></td>
    <td><%= link_to 'Show', sprint %></td>
    <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
    <td><%= link_to 'Destroy', sprint, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New sprint', new_sprint_path %>